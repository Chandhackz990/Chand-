<div id="results"></div>

<script>
// ---- SEARCH SYSTEM (HACKING ONLY) ---- //

async function search() {
    let query = document.getElementById("searchBox").value;

    if (!query) {
        alert("Search box khali hai!");
        return;
    }

    // Hacking filter apply
    query += " hacking cyber security kali linux bug bounty";

    let url =
        "https://www.googleapis.com/customsearch/v1?key=AIzaSyD9-Mx20sndFNiC4Yni3YcboNCfgRiqp6U&cx=24a2e034e40944f94&q=" +
        encodeURIComponent(query);

    let response = await fetch(url);
    let data = await response.json();

    let resultsBox = document.getElementById("results");
    resultsBox.innerHTML = "";

    if (!data.items) {
        resultsBox.innerHTML = "<p>No results found.</p>";
        return;
    }

    data.items.forEach(item => {
        let div = document.createElement("div");
        div.className = "result";

        div.innerHTML =
            "<b>" + item.title + "</b><br>" +
            "<a href='" + item.link + "' target='_blank'>" + item.link + "</a><br><br>" +
            item.snippet;

        resultsBox.appendChild(div);
    });
}
</script>

